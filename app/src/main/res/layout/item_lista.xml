<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/foto"
        android:layout_width="131dp"
        android:layout_height="118dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvdireccion"
        android:layout_width="184dp"
        android:layout_height="29dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/foto"
        app:layout_constraintTop_toBottomOf="@+id/titdireccion" />

    <TextView
        android:id="@+id/tvprecio"
        android:layout_width="204dp"
        android:layout_height="29dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/foto"
        app:layout_constraintTop_toBottomOf="@+id/titprecio" />

    <TextView
        android:id="@+id/titdireccion"
        android:layout_width="176dp"
        android:layout_height="22dp"
        android:text="Direccion"
        android:textColor="#042C4C"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/foto"
        tools:layout_editor_absoluteY="17dp" />

    <TextView
        android:id="@+id/titprecio"
        android:layout_width="184dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Precio"
        android:textColor="#042C4C"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/foto"
        app:layout_constraintTop_toBottomOf="@+id/tvdireccion" />
</androidx.constraintlayout.widget.ConstraintLayout>